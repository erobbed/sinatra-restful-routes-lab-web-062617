<form action="/recipes/<%=@recipe.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Name: <input type="text" id="name" name="name" value="<%=@recipe.name%>"> <br>
    Ingredients: <input type="text" id="ingredients" name="ingredients" value="<%=@recipe.ingredients%>"> <br>
    Cook Time: <input type="text" id="cook_time" name="cook_time" value="<%=@recipe.cook_time%>"><br>
    <input type="submit" id="submit" value="Submit">
</form>
